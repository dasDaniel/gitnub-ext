{
  "name": "GitNub",
  "version": "1.0",
  "description": "Git helper Chrome extension",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "http://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "https://github.com/*",
    "http://github.com/*",
    "storage"
  ]
}
